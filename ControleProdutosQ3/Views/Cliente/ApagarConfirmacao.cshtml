@model ClienteModel

@{
    ViewData["Title"] = "Confirmação da Exclusão do Produto";
}
<div class="text-center">
    <h3 class="display-4">Deseja Realmente Excluir o Produto @Model.Nome?</h3>
</div>
<div class="container d-flex justify-content-center">
    <a class="btn btn-primary btn-block" role="button" asp-controller="Cliente" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Cliente" asp-action="Remover" asp-route-id="@Model.Id">Confirmar Exclusão</a>
</div>
