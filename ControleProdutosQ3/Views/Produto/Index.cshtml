@model List<ProdutoModel>

@{
    ViewData["Title"] = "Produtos";
}

<div class="text-center">
    <div>
        <a class= "btn btn-success" role="button" asp-controller="Produto" asp-action="Criar">
            Adicionar novo produto
        </a>
        <h2>Listar Produtos</h2>
    </div>

    <table class="table caption-top">
        <caption>Lista de Produtos</caption>
        <thead>
            <tr>
                <th scope="col">Foto</th>
                <th scope="col">Id</th>
                <th scope="col">Código de Barras</th>
                <th scope="col">Descrição</th>
                <th scope="col">Data de Validade</th>
                <th scope="col">Data de Registro</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Situação</th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null && Model.Any())
            {
                foreach(ProdutoModel produto in Model)
                {

                    string estado = "Inativo";

                    if (produto.Ativo)
                    {
                        estado = "Ativo";
                    }

                    <tr class="align-baseline">
                        <td scope="col"><img src="https://media.istockphoto.com/id/1326411219/pt/foto/calico-cat-with-green-eyes-lying-on-cardboard-scratch-board.jpg?s=612x612&w=0&k=20&c=X54JSJnTWTt3pc2udoEgysbS_prAetPrX7axC9I-Pa0=" width="50px" height="50px" /></td>                        
                        <th>@produto.Id</th>
                        <td>@produto.CodigoDeBarras</td>
                        <td>@produto.Descricao</td>
                        <td>@produto.DataDeValidade.ToString("dd/MM/yyyy")</td>
                        <td>@produto.DataDeRegistro.ToString("dd/MM/yyyy")</td>
                        <td>@produto.Quantidade</td>
                        <td>@produto.Valor.ToString("C2")</td>
                        <td>@estado</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>